                                        <div class="hstack gap-2 fs-15">
                                            <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-success"><i class="ri-download-2-line"></i></a>
                                            <a href="javascript:void(0);" class="btn btn-icon btn-sm btn-info"><i class="ri-edit-line"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        Page @(Model.Pagina) of @Model.Total
    </div>

    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.Total; i++)
            {
                <li class="@(i == Model.Pagina ? "active" : "")">
                    <a asp-action="Index" asp-route-pageIndex="@i" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-searchString="@ViewData["CurrentFilter"]">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
